#!/usr/bin/env bash

set -euo pipefail

BUILD_DIR=$1
CACHE_DIR=$2

R_BINARY_LOCATION=https://github.com/dvulpe/r-buildpack/releases/download/v0.1.0/R-3.4.2.tar.gz
R_CACHED_BINARY="$CACHE_DIR/R-3.4.2.tar.gz"

export DEPS_DIR="$BUILD_DIR/.cloudfoundry"
mkdir -p "$DEPS_DIR/0"
mkdir -p "$BUILD_DIR/.profile.d"

WORKDIR=$PWD
echo "Current folder ${WORKDIR}"

cd $BUILD_DIR

if [ -f $R_CACHED_BINARY ]; then
    echo "Using R 3.4.2 cached binaries"
else
    echo "Downloading R 3.4.2 binaries"
    curl -sS -L -o $R_CACHED_BINARY $R_BINARY_LOCATION
fi

echo "Decompressing R-3.4.2 binaries"
#tar -zxf $R_CACHED_BINARY

cat << EOF > $BUILD_DIR/boot.sh
#!/usr/bin/env bash

echo "Starting R project"
declare -x
echo "Current folder: $PWD"

cd /app
/app/bin/Rscript main.R
EOF

chmod +x $BUILD_DIR/boot.sh

cd $WORKDIR
